<div class="clock-wrapper">
    <span class="number">
        <%=day%>
    </span>
    <span class="colon">天</span>
    <span class="number">
        <%=hour%>
    </span>
    <span class="colon">时</span>
    <span class="number">
        <%=minute%>
    </span>
    <span class="colon">分</span>
    <span class="number second">
        <%=second%>
    </span>
    <span class="colon">秒</span>
</div>
